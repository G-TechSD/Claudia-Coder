# ===========================================
# Claudia Coder Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
#
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser.
# All other variables are server-side only.
#
# NOTE: For the all-in-one Docker container, most values are
# pre-configured. You only need this file for standalone installs.

# ===========================================
# Authentication (Required)
# ===========================================

# Application URL (used for OAuth callbacks and auth redirects)
# Use https://localhost:3000 for local development with HTTPS
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Auth secret - REQUIRED, CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-change-in-production

# Admin user email address
# This is the primary administrator account for the system
ADMIN_EMAIL=admin@localhost

# Trusted origins for authentication
# Comma-separated list of additional origins allowed for auth requests
# Example: https://app.example.com,https://admin.example.com
TRUSTED_ORIGINS=

# Legacy NextAuth support (if using older auth system)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-nextauth-secret

# ===========================================
# OAuth Providers (Optional)
# ===========================================

# Google OAuth (enables social login with Google)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Required scopes: openid, email, profile
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (enables social login with GitHub)
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# Cloud LLM API Keys (Optional)
# ===========================================
# Leave empty to use UI configuration or local models only
# These enable paid API fallback when local models are unavailable

# Anthropic Claude API
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API (GPT models, Whisper transcription)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google AI / Gemini API
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=
# Alternative name (both work)
# GEMINI_API_KEY=

# ===========================================
# Local LLM Servers (Optional)
# ===========================================
# Configure your local LLM endpoints for privacy-first AI

# LM Studio Server URLs
# Default port is 1234. Use host IP for Docker deployments.
NEXT_PUBLIC_LMSTUDIO_SERVER_1=
NEXT_PUBLIC_LMSTUDIO_SERVER_2=

# Ollama Server URL
# Default: http://localhost:11434
NEXT_PUBLIC_OLLAMA_URL=http://localhost:11434

# ===========================================
# Whisper Speech-to-Text (Optional)
# ===========================================

# Local Whisper server URL (faster-whisper or similar)
# Default: http://localhost:8000
NEXT_PUBLIC_WHISPER_URL=http://localhost:8000

# ===========================================
# n8n Workflow Automation (Optional)
# ===========================================

# n8n Server URL
NEXT_PUBLIC_N8N_URL=http://localhost:5678

# n8n API Key (generate in n8n Settings > API)
NEXT_PUBLIC_N8N_API_KEY=

# Server-side n8n configuration (can differ from public URL)
N8N_URL=
N8N_API_KEY=

# Webhook configuration for Claude Code execution
N8N_WEBHOOK_URL=http://localhost:5678/webhook/claudia-execute
CLAUDIA_CALLBACK_URL=http://localhost:3000/api/n8n-callback

# ===========================================
# Git Services (Optional)
# ===========================================

# GitLab (self-hosted or cloud)
# Server-side GitLab URL (used for API calls from the server)
GITLAB_URL=
# Client-side GitLab URL (exposed to browser for UI links)
NEXT_PUBLIC_GITLAB_URL=
GITLAB_TOKEN=

# Gitea (bundled in all-in-one container)
NEXT_PUBLIC_GITEA_URL=http://localhost:3000

# Generic Git URL (for custom git providers)
# NEXT_PUBLIC_GIT_URL=

# ===========================================
# OpenWebUI (Optional)
# ===========================================

# OpenWebUI Chat Interface URL (bundled in all-in-one)
NEXT_PUBLIC_OPENWEBUI_URL=http://localhost:8080

# ===========================================
# Linear Integration (Optional)
# ===========================================

# Linear API Key for issue tracking
# Get your key at: https://linear.app/settings/api
NEXT_PUBLIC_LINEAR_API_KEY=
# Server-side alias
# LINEAR_API_KEY=

# ===========================================
# Search APIs (Optional)
# ===========================================
# For prior art research and web search features

# Serper API (preferred for search)
# Get your key at: https://serper.dev/
SERPER_API_KEY=

# Google Custom Search API (alternative)
# GOOGLE_SEARCH_API_KEY=

# ===========================================
# Email Configuration (Optional)
# ===========================================
# Required for invite system and notifications
# Choose ONE provider: Resend OR SMTP

# Option 1: Resend (recommended - https://resend.com)
# Get your API key at: https://resend.com/api-keys
RESEND_API_KEY=

# Option 2: SMTP (Gmail, SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Email sender address
EMAIL_FROM=Claudia <noreply@claudiacoder.com>

# ===========================================
# Claude Code Execution (Advanced)
# ===========================================
# For remote code execution via SSH

# Remote execution host configuration
CLAUDE_CODE_HOST=localhost
CLAUDE_CODE_USER=your-username
CLAUDE_CODE_SSH_KEY=~/.ssh/id_rsa

# ===========================================
# Visual Testing (Advanced)
# ===========================================
# For automated screenshot and visual regression testing

VISUAL_TEST_HOST=localhost
VISUAL_TEST_USER=test-user
VISUAL_TEST_SSH_KEY=~/.ssh/id_rsa

# ===========================================
# Project Configuration
# ===========================================

# Project storage base directory
# Default: $HOME/claudia-projects
CLAUDIA_PROJECTS_BASE=

# Local storage directory for app data
# Default: $PWD/.local-storage
CLAUDIA_STORAGE_DIR=

# ===========================================
# Beta Testing & Development
# ===========================================

# Enable auth bypass for beta testing (set to "true" to enable)
# WARNING: Only use this for development/testing!
NEXT_PUBLIC_BETA_AUTH_BYPASS=false

# Enable lockdown mode (restricts certain features)
CLAUDIA_LOCKDOWN_ENABLED=false

# Webhook secret for external integrations
CLAUDIA_WEBHOOK_SECRET=

# ===========================================
# Deployment Configuration
# ===========================================
# SSL/HTTPS settings for secure deployments

# Path to SSL private key file (for HTTPS server)
# Example: /etc/ssl/private/server.key
SSL_KEY_PATH=

# Path to SSL certificate file (for HTTPS server)
# Example: /etc/ssl/certs/server.crt
SSL_CERT_PATH=

# ===========================================
# Docker Container Configuration
# ===========================================
# These are typically set in docker-compose.yml

# PostgreSQL (for multi-user deployments)
# POSTGRES_USER=claudia
# POSTGRES_PASSWORD=secure_password_here

# n8n Container
# N8N_USER=admin
# N8N_PASSWORD=secure_password_here
# N8N_ENCRYPTION_KEY=32-character-encryption-key

# Timezone
# TIMEZONE=America/New_York

# Whisper Model (tiny, base, small, medium, large-v2, large-v3)
# WHISPER_MODEL=base

# ===========================================
# Resource Limits (Docker Advanced)
# ===========================================
# Uncomment and adjust if you have limited/excess resources

# CLAUDIA_MEMORY_LIMIT=1G
# N8N_MEMORY_LIMIT=1G
# GITLAB_MEMORY_LIMIT=4G
# WHISPER_MEMORY_LIMIT=2G
# POSTGRES_MEMORY_LIMIT=512M
# REDIS_MEMORY_LIMIT=512M

# ===========================================
# Port Configuration (Docker Advanced)
# ===========================================
# Change ports if defaults conflict with existing services

# CLAUDIA_PORT=3000
# N8N_PORT=5678
# GITLAB_HTTP_PORT=8080
# GITLAB_SSH_PORT=2222
# WHISPER_PORT=8000
# POSTGRES_PORT=5432
# REDIS_PORT=6379
