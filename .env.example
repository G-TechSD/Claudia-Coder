# ===========================================
# Claudia Coder Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# Whisper STT Server (local)
NEXT_PUBLIC_WHISPER_URL=http://localhost:8000

# n8n Configuration
NEXT_PUBLIC_N8N_URL=https://localhost:5678
NEXT_PUBLIC_N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_URL=https://localhost:5678/webhook/claudia-execute
N8N_API_URL=https://localhost:5678/api/v1
CLAUDIA_CALLBACK_URL=http://localhost:3000/api/n8n-callback

# LM Studio Servers
NEXT_PUBLIC_LMSTUDIO_BEAST=http://localhost:1234
NEXT_PUBLIC_LMSTUDIO_BEDROOM=http://localhost:1234

# Linear (optional)
NEXT_PUBLIC_LINEAR_API_KEY=

# GitLab (optional)
NEXT_PUBLIC_GITLAB_URL=https://gitlab.example.com

# Anthropic Claude API (for interview questions)
ANTHROPIC_API_KEY=

# ===========================================
# Better Auth Configuration
# ===========================================

# Application URL (used for OAuth callbacks)
NEXT_PUBLIC_APP_URL=https://localhost:3000

# Auth secret - CHANGE THIS IN PRODUCTION
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-change-in-production

# Google OAuth (optional - enable social login with Google)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Set redirect URI to: ${NEXT_PUBLIC_APP_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional - enable social login with GitHub)
# Create OAuth app at: https://github.com/settings/developers
# Set callback URL to: ${NEXT_PUBLIC_APP_URL}/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
