# ============================================
# Claudia Coder - Docker Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# PRIVATE DEPLOYMENT ONLY - KEEP THIS FILE SECURE

# ============================================
# Required Configuration
# ============================================

# Authentication Secret (REQUIRED)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-change-me-now

# PostgreSQL Configuration
POSTGRES_USER=claudia
POSTGRES_PASSWORD=claudia_secure_password_change_me

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=change_this_password
N8N_ENCRYPTION_KEY=change-this-encryption-key-32chars

# ============================================
# API Keys (Optional but Recommended)
# ============================================

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ============================================
# OAuth Configuration (Optional)
# ============================================

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Set redirect URI to: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Create OAuth app at: https://github.com/settings/developers
# Set callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================
# LM Studio Configuration (Optional)
# ============================================

# Host machine LM Studio URL
# On Mac/Windows Docker Desktop, use: http://host.docker.internal:1234
# On Linux, use your host machine IP (e.g., run: hostname -I | awk '{print $1}')
LMSTUDIO_HOST=http://host.docker.internal:1234

# ============================================
# Service Customization
# ============================================

# Timezone for n8n workflows
TIMEZONE=America/New_York

# Whisper Model (options: tiny, base, small, medium, large-v2, large-v3)
# Larger models are more accurate but require more memory
WHISPER_MODEL=base

# ============================================
# Resource Limits (Advanced)
# ============================================

# Adjust these if you have limited/excess resources
# Format: <number><unit> (e.g., 512M, 2G)

# CLAUDIA_MEMORY_LIMIT=1G
# N8N_MEMORY_LIMIT=1G
# GITLAB_MEMORY_LIMIT=4G
# WHISPER_MEMORY_LIMIT=2G
# POSTGRES_MEMORY_LIMIT=512M
# REDIS_MEMORY_LIMIT=512M

# ============================================
# Network Configuration (Advanced)
# ============================================

# Change ports if defaults conflict with existing services
# CLAUDIA_PORT=3000
# N8N_PORT=5678
# GITLAB_HTTP_PORT=8080
# GITLAB_SSH_PORT=2222
# WHISPER_PORT=8000
# POSTGRES_PORT=5432
# REDIS_PORT=6379
